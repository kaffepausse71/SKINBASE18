<?xml version="1.0" encoding="UTF-8"?>
<addon
	id="skin.night"
	version="2.3.4"
	name="Night"
	provider-name="bkury">
	<requires>
                <import addon="xbmc.gui" version="5.14.0"/>
	</requires>
        <extension point="xbmc.gui.skin" effectslowdown="1" debugging="false">
                <res width="1280" height="720" aspect="16:9" default="false" folder="720"/>
                <res width="1280" height="800" aspect="16:10" default="false" folder="720"/>
                <res width="1440" height="720" aspect="18:9" default="false" folder="720"/>
        </extension>
	<extension point="xbmc.addon.metadata">
		<summary>Night is a beautiful, clean and Fanart focused Skin for KODI</summary>
		<description>Night is a beautiful, clean and Fanart focused Skin for KODI. Design is based on Night by mcborzu, Rewritten by bkury</description>	
		<disclaimer>More information on the skin can be found at the KODI forums.</disclaimer>
		<platform>all</platform>
		<license>CC BY-SA 4.0, GNU GENERAL PUBLIC LICENSE Version 2.0</license>
		<forum>https://bit.ly/night4kodi</forum>
		<source>https://github.com/bkury/skin.night</source>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
			<screenshot>resources/screenshot-04.jpg</screenshot>
			<screenshot>resources/screenshot-05.jpg</screenshot>
		</assets>
	</extension>
</addon>

